{
  "compilerOptions": {
    "target": "ES2020",               
    "module": "ESNext",                
    "moduleResolution": "node",        
    "declaration": true,               
    "declarationDir": "dist/types",    
    "outDir": "./dist",                
    "strict": true,                    
    "noEmit": false,                   
    "esModuleInterop": true,           
    "skipLibCheck": true,              
    "sourceMap": true,                 
    "resolveJsonModule": true,         
    "allowJs": true,                   
    "jsx": "react-jsx",                
    "noUnusedLocals": true,            
    "noUnusedParameters": true,        
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true   
  },
  "include": ["src/**/*"],            
  "exclude": ["node_modules", "dist"] 
}
